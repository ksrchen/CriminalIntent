<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_activated"
        >

    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/crime_list_solvedCheckbox"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:enabled="false"
            android:focusable="false"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/crime_list_titleTextview"
            android:layout_toLeftOf="@id/crime_list_solvedCheckbox"
            android:text="Crime Title"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textStyle="bold"
            />
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/crime_list_dateTextview"
            android:layout_toLeftOf="@id/crime_list_solvedCheckbox"
            android:layout_below="@id/crime_list_titleTextview"
            android:text="Crime Date"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="4dp"
            />

</RelativeLayout>